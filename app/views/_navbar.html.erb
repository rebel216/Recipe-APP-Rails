<header>
  <div class="header">
    <div>
      <h3 class="brand">Rails Recipe APP</h3>
    </div>
    <div>
      <nav class="nav">
        <ul class="nav-wrapper">
          <li><%= link_to "Food", user_foods_path(current_user.id), method: :get%></li>
          
          <li><%= link_to "Shopping list", shoppings_path%></li>
        </ul>
      </nav>
    </div>
    <div>
      <% if user_signed_in? %>
        <%= link_to "Sign out", destroy_user_session_path, method: :delete%>
      <% else %>
        <%= link_to "Log in", new_user_session_path %>
        <%= link_to "Sign up", new_user_registration_path %>
      <% end %>
    </div>
  </div>
</header>
